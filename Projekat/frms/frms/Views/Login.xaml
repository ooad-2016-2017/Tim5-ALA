<Page
    x:Class="frms.Views.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:frms.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="White" Foreground="Black">

    <Grid Margin="0,111,25,110"
          Background="Transparent"
          HorizontalAlignment="Right"
          VerticalAlignment="Center" Width="274">

        <StackPanel>
            <TextBox x:Name="Username" PlaceholderText="Username" AutomationProperties.IsRequiredForForm="True"/>
            <PasswordBox x:Name="Password" PlaceholderText="Password" Margin="0,10,0,0" AutomationProperties.IsRequiredForForm="True"/>
            <Button x:Name="LoginButton"
                    Margin="15,15,0,15"
                    HorizontalAlignment="Right" 
                    Width="72"
                    Height="35"
                    Content="Log in"
                    Click="LoginButton_Click"/>
        </StackPanel>

    </Grid>
</Page>
