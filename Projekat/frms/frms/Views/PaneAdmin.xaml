<Page
    x:Class="frms.Views.PaneAdmin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:frms.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Transparent">
        <StackPanel>
            <StackPanel Orientation="Horizontal"
                        Background="#2c6187">
                <Button x:Name="HamburgerButton"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE700;"
                        Width="50"
                        Height="50"
                        Foreground="White"
                        Background="Transparent"
                        Click="HamburgerButton_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Background="#2c6187">
                <Button x:Name="RequestsButton"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE945;"
                        Width="50"
                        Height="50"
                        Foreground="White"
                        Background="Transparent"
                        Click="RequestsButton_Click"/>
                <TextBlock Text="Zahtjevi"
                           FontSize="18"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Background="#2c6187">
                <Button x:Name="AddUsersButton"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE8FA;"
                        Width="50"
                        Height="50"
                        Foreground="White"
                        Background="Transparent"
                        Click="AddUsersButton_Click"/>
                <TextBlock Text="Korisnici"
                           FontSize="18"
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Background="#2c6187">
                <Button x:Name="AddHallsButton"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xECC4;"
                        Width="50"
                        Height="50"
                        Foreground="White"
                        Background="Transparent"
                        Click="AddHallsButton_Click"/>
                <TextBlock Text="Sale"
                           FontSize="18"
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Background="#2c6187">
                <Button x:Name="SearchHallsButton"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE721;"
                        Width="50"
                        Height="50"
                        Foreground="White"
                        Background="Transparent"
                        Click="SearchHallsButton_Click"/>
                <TextBlock Text="Pretraga"
                           FontSize="18"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
